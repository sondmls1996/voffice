<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.viettel.voffice.tablet">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_android_small"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.viettel.voffice.tablet.activity.MainActivity"
            android:configChanges="locale|orientation|keyboard|screenSize"
            android:exported="true"
            android:screenOrientation="landscape"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.viettel.voffice.tablet.activity.Voffice"
            android:screenOrientation="landscape"
            ></activity>
    </application>

</manifest>